<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/explain_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/explain_title_icon_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="说明和帮助"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/explain_title_layout">

        <TextView
            style="@style/explainText"
            android:text="1.复制您需要输入的内容，对于从别人朋友圈复制的内容建议先拷到备忘录等地方改一两个字" />

        <TextView

            style="@style/explainText"
            android:text="2.发朋友圈时从顶部调出系统通知栏，在输入法中选择SimpleInput" />

        <TextView

            style="@style/explainText"
            android:text="3.检查要发送的文字，确认无误后点击开始输入，然后进行发表，这样应该就不会折叠了" />

        <TextView

            style="@style/explainText" />

        <TextView

            style="@style/explainText"
            android:text="如有问题，可进行反馈" />

        <TextView
            style="@style/explainText"
            android:text="公众号：Xianfei   Github：xianfei  b站：xianfei"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView"
            style="@style/explainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邮箱：xianfei@bupt.edu.cn"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            style="@style/explainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基于github:zzsakurazz的开源项目改进"
            android:textSize="12sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>